<section class="border-2 border-stone-300">
    <div class="bg-stone-300 p-1.5 flex justify-between sm:justify-start pl-title">
        <h4>{{pl.title}}</h4>
        <p class="ml-2 md:ml-4">â–¼</p>
    </div>
    
    <div class="hidden">
        {{#if belongsToThisUser}}
        <div class="border-t-2 border-stone-400">
            <a role="button" href="/edit-playlist/{{pl._id}}" class="rectangle-btn w-36">Edit</a>

            <button type="button" data-id="{{pl._id}}" data-modal-btn="open-modal" data-btn-type="del-btn" class="rectangle-btn w-36 text-left">Delete</button>
        </div>
        {{/if}}
        
        <div class="pl-3 py-2.5">
            <ul class="divide-y space-y-1.5">
                {{#each pl.songs as |song|}}
                    {{> song song}}
                {{/each}}
            </ul>

            <hr>

            <p class="-mt-2"><a href="/playlists/{{pl._id}}">Link to this playlist.</a></p>
        </div>
    </div>
</section>